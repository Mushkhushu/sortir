{% extends 'base.html.twig' %}

{% block title %}Edit Ville{% endblock %}

{% block body %}
    <div class="background-overlay"></div>
    <main class="d-flex">
        <div class="content container">
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            <h1>Edit Ville {{ ville.nom }}</h1>
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                        {% set errors = form_errors(form.nom) %}
                        {% if errors %}
                            <div class="text-danger">
                                {{ errors|striptags }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.codePostal, 'Code postal:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.codePostal, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                        {% set errors = form_errors(form.codePostal) %}
                        {% if errors %}
                            <div class="text-danger">
                                {{ errors|striptags }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_ville_index') }}" class="btn btn-danger">Retour Ã  la liste</a>
                        {{ form_row(form.submit, {'label': 'Modifier la ville'}) }}
                        {{ include('ville/_delete_form.html.twig') }}

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
