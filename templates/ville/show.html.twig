{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
<main class="d-flex">
    <div class="container">
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}
    <h1>Ville: {{ ville.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ville.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ville.nom }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ ville.codePostal }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ville_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app_ville_edit', {'id': ville.id}) }}" class="btn btn-secondary">edit</a>

    {{ include('ville/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
