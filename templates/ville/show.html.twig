{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
    <div class="background-overlay"></div>
    <h1 class="row justify-content-center">Ville: {{ ville.nom }}</h1>
    <main class="d-flex">
        <div class="content container d-flex flex-column">
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <div class="card mb-4 mt-4">

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ville.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ ville.nom }}</td>
                </tr>
                <tr>
                    <th>CodePostal</th>
                    <td>{{ ville.codePostal }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content mb-4">
                <a href="{{ path('app_ville_index') }}" class="btn btn-primary">back to list</a>
                <a href="{{ path('app_ville_edit', {'id': ville.id}) }}" class="btn btn-secondary">edit</a>
                {{ include('ville/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}
