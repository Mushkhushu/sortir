{% extends 'base.html.twig' %}

{% block title %}New Ville{% endblock %}

{% block body %}
    <div class="background-overlay"></div>
<main class="d-flex">
    <div class="content container">
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}
    <h1 class="row justify-content-center">Create new Ville</h1>
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {% set errors = form_errors(form.nom) %}
                    {% if errors %}
                        <div class="text-danger">
                            {{ errors|striptags }}
                        </div>
                    {% endif %}
                </div>
                <div class="mb-3">
                    {{ form_label(form.codePostal, 'Code postal:', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                    {% set errors = form_errors(form.codePostal) %}
                    {% if errors %}
                        <div class="text-danger">
                            {{ errors|striptags }}
                        </div>
                    {% endif %}
                </div>
                <div class="d-flex justify-content-between">
                    {{ form_row(form.submit, {'label': 'Create Ville', 'attr': {'class': 'btn btn-primary'}}) }}
                    <a  class="btn btn-secondary" href="{{ path('app_ville_index') }}">back to list</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</main>
{% endblock %}
