{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
<div class="background-overlay"></div>
<main class="d-flex flex-column">
    <div class="content container">
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}
        <a href="{{ path('group/new') }}" class="btn btn-success mt-3">Create new</a>
        <h1 class="row justify-content-center">Liste des groupes</h1>

        <div class="container">
            <div class="row">
                {% for group in groups %}
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-body" >
                                <div class="card-body" >
                                    <h5 class="card-title">{{ group.name }}</h5>
                                    <p class="card-text">Identifiant: {{group.id}}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                        <a href="{{ path('group/show', {'id': group.id}) }}" class="btn btn-primary btn-sm">show</a>
                                       <a href="{{ path('group/edit', {'id': group.id}) }}" class="btn btn-primary btn-sm">edit</a>
                                       </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-text">J'ai rien trouvé déso :/</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</main>
{% endblock %}
