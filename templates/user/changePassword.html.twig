{% extends 'base.html.twig' %}

{% block title %}Edit{% endblock %}

{% block body %}
    <main class="d-flex">
        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
        <div class="container">
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            <h1>Changer votre mot de passe {{ user.username }} !</h1>
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.password, 'Mot de passe actuel:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {% set errors = form_errors(form.password) %}
                        {% if errors %}
                            <div class="text-danger">
                                {{ errors|striptags }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.new_password.first, 'Nouveau mot de passe:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.new_password.first, {'attr': {'class': 'form-control'}}) }}
                        {% set errors = form_errors(form.new_password.first) %}
                        {% if errors %}
                            <div class="text-danger">
                                {{ errors|striptags }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.new_password.second, 'Répétez le nouveau mot de passe:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.new_password.second, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('user_index') }}" class="btn btn-outline-danger">Retour à la liste</a>
                        {{ form_row(form.ok, {'label': 'Modifier votre mot de passe', 'attr': {'class': 'btn btn-outline-secondary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
