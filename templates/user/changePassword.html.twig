{% extends 'base.html.twig' %}
{% block title %}Change Password{% endblock %}
{% block body %}
    <div class="background-overlay"></div>
    <main class="d-flex">
        <div class="content container">
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            <h1>Change your password, {{ user.username }}!</h1>
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.plainPassword.first, 'New Password:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {% set errors = form_errors(form.plainPassword.first) %}
                        {% if errors %}
                            <div class="text-danger">
                                {{ errors|striptags }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.plainPassword.second, 'Repeat New Password:', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('user/index') }}" class="btn btn-danger">Back to List</a>
                        {{ form_row(form.ok, {'label': 'Change Password', 'attr': {'class': 'btn btn-secondary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
