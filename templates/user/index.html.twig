{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <main class="d-flex">
        <div class="container">
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            <h1>User Index</h1>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4">
                {% for user in users %}
                    <div class="col mb-4">
                        <div class="card">
                            {% if user.picture is not empty %}
                                <img src="{{ asset(picture_dir ~ '/'  ~ user.picture) }}" alt="#" width="55" height="55" class="rounded-circle"/>
                            {% else %}
                                <img src="{{ asset('../assets/images/default-avatar.png') }}" alt="default-avatar" width="55" height="55" class="rounded-circle"/>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ user.username }}</h5>
                                <p class="card-text">{{ user.firstName }} {{ user.lastName }}</p>
                                <a href="{{ path('user/show', {'id': user.id}) }}" class="btn btn-primary btn-sm">Show</a>
                                {% if app.user and app.user.id == user.id %}
                                    <a href="{{ path('user/edit', {'id': user.id}) }}" class="btn btn-success btn-sm">Edit</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-text">No records found</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <a href="{{ path('user/new') }}" class="btn btn-success">Create New</a>
            <a href="{{ path('group/new') }}" class="btn btn-success">Create Private Group </a>
        </div>
    </main>

{% endblock %}