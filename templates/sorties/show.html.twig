{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}
    <h1>Sorties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sorty.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sorty.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ sorty.date ? sorty.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Duree</th>
                <td>{{ sorty.duree }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ sorty.lieu }}</td>
            </tr>
            <tr>
                <th>NbrPersonne</th>
                <td>{{ sorty.nbrPersonne }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ sorty.note }}</td>
            </tr>
            <tr>
                <th>DateLimite</th>
                <td>{{ sorty.dateLimite ? sorty.dateLimite|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sorties_index') }}">back to list</a>

    <a href="{{ path('app_sorties_edit', {'id': sorty.id}) }}">edit</a>

    {{ include('sorties/_delete_form.html.twig') }}
