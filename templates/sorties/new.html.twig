{% extends 'base.html.twig' %}

{% block title %}New Sorties{% endblock %}

{% block body %}
    <main class="d-flex">
    {%  block sidebar %}
        {{ parent() }}
    {% endblock %}
    <div class="container">
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}
    <h1>Create new Sorties</h1>

    {{ include('sorties/form.html.twig') }}

    <a href="{{ path('sorties/index') }}">back to list</a>
    </div>
    </main>
{% endblock %}
