{% extends 'base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
<main class="d-flex">
    <div class="container">
        {% for group, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
            {% endfor %}
        {% endfor %}
    <h1>Lieu: {{ lieu.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lieu.id }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ lieu.Longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ lieu.latitude }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ lieu.nom }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ lieu.rue }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ lieu.ville.nom }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex col justify-content-start">
    <a href="{{ path('app_lieu_index') }}" class="btn btn-outline-primary">back to list</a>
    <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="btn btn-outline-secondary">edit</a>
    {{ include('lieu/_delete_form.html.twig') }}
    </div>
    </div>
</main>
{% endblock %}
