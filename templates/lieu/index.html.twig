{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block body %}
    <main class="d-flex">
        <div class="background-overlay"></div>
        <div class=" content container">
            {% for group, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ group }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            <h1 class="row justify-content-center">Liste des lieux</h1>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4">
                {% for lieu in lieus %}
                    <div class="col mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ lieu.nom }}</h5>
                                <p class="card-text">Rue: {{ lieu.rue }}</p>
                                <p class="card-text">Longitude: {{ lieu.longitude }}</p>
                                <p class="card-text">Latitude: {{ lieu.latitude }}</p>
                                <p class="card-text">Ville: {{ lieu.ville.nom }}</p>
                                <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}"
                                   class="btn btn-primary btn-sm">show</a>
                                <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}"
                                   class="btn btn-secondary btn-sm">edit</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-text">No records found</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a href="{{ path('app_lieu_new') }}" class="mb-3 btn btn-success">Create Lieu</a>
        </div>
    </main>
{% endblock %}
